<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Demo2Spinner">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15pt"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        android:gravity="center"
        android:text="Spinner" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13pt"
        android:textStyle="bold"
        android:textColor="#E34CCE"
        android:text="Chọn công ty" />

    <Spinner
        android:id="@+id/spCty"
        android:background="#D3F4F1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:spinnerMode="dropdown"
        />

    <TextView
        android:id="@+id/textView7"
        android:textSize="15pt"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#4C6DE3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom Spinner" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13pt"
        android:textStyle="bold"
        android:textColor="#E34CCE"
        android:text="Chọn trái cây" />

    <Spinner
        android:id="@+id/spTC"
        android:background="#FAF0B5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:spinnerMode="dialog"/>
</LinearLayout>